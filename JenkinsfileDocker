pipeline {
    agent any
    stages{
        stage('Build'){
            steps{
                sh '''
                    PATH=$PATH:/usr/local/Cellar/maven/3.6.3_1/bin
                    mvn clean package
                '''
                sh "/usr/local/bin/docker build . -t tomcatwebapp:${env.BUILD_ID}"
            }
        }
    }
}